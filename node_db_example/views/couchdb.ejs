<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%- include('./common/cssjs.ejs') %>
    <link rel='stylesheet' href='/stylesheets/style.couch.css' />
</head>

<body>
 <%- include('./common/header.ejs') %>
    <div class="container">
        <div class="row">
            <div class="col s8 offset-s2">
                <div class="card grey darken-3">
                    <div class="card-content white-text">
                        <span class="card-title"><%= title %></span>
                        <br/>
                       <form method="post" action="/couchdb/cruddb">
                         <div class="input-field">
                            <select class="dbselect" name="dbselect">
                                    <option value="" disabled selected>Choose your option</option>
                                    <% dbList.forEach(function(dbname) { %>
                                     <option value="<%= dbname %>"><%= dbname %></option>
                                    <% }); %>
                            </select>
                             <label>Select DataBase</label>
                         </div>
                          <input type="submit" class="btn right red darken-4" value="OK">
                       </form>
                       <br/>
                    </div>
                    </div>
                      <a href="/" class="back_link">Back to Top</a>
                </div>
            </div>
        </div>
        </div>
</body>

</html>


                          
                             

                               
                         
                           
            